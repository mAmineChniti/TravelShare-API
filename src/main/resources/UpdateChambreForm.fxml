<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UpdateChambreController" spacing="10" alignment="CENTER" style="-fx-background-color: #f5f6fa; -fx-padding: 20;">
    <Label text="Modifier la chambre" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <VBox spacing="5">
        <Label text="Numéro de chambre" />
        <TextField fx:id="numeroField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Type de chambre" />
        <TextField fx:id="typeField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Prix par nuit" />
        <TextField fx:id="prixField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Disponibilité" />
        <TextField fx:id="disponibleField" />
    </VBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
    </HBox>
</VBox>