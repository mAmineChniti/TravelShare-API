<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" styleClass="root" stylesheets="@css/Style.css"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AddChambreController">

    <children>
        <!-- Navigation Sidebar -->
        <VBox layoutX="0.0" prefHeight="570.0" prefWidth="234.0" styleClass="vbox" stylesheets="@css/Style.css">
            <children>
                <ImageView fitHeight="88.0" fitWidth="124.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="20.0" left="30.0" />
                    </VBox.margin>
                    <image>
                        <Image url="@images/agence.png" />
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" onAction="#SwitchToAccueil" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Accueil" />
                <Button mnemonicParsing="false" onAction="#SwitchToVoyages" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Voyages">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#SwitchToHotels" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Hotels">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Excursions">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#SwitchToPosts" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Postes">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#switchToProfile" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonNavigation" text="Profile">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#deconnexion" prefHeight="50.0" prefWidth="230.0"
                        styleClass="buttonDeconnexion" text="Déconnexion">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </Button>
            </children>
        </VBox>

        <!-- Add Chambre Form -->
        <GridPane layoutX="250.0" layoutY="50.0" hgap="20" vgap="15" style="-fx-padding: 30;">
            <children>
                <TextField fx:id="numeroField" promptText="Numéro de chambre" prefWidth="250.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                <ComboBox fx:id="typeComboBox" promptText="Type de chambre" prefWidth="250.0"
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <TextField fx:id="prixField" promptText="Prix par nuit" prefWidth="250.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Button text="Ajouter" onAction="#handleAdd" prefWidth="250.0"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                        GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Button text="Annuler" onAction="#handleCancel" prefWidth="250.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>