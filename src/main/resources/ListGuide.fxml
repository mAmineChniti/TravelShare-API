      </VBox>
      <ScrollPane layoutX="250.0" layoutY="89.0" prefHeight="457.0" prefWidth="580.0">
         <content>
            <VBox fx:id="guideContainer" prefWidth="570.0" spacing="10.0" style="-fx-padding: 10;" />
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
