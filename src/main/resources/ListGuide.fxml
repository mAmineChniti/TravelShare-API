               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="PostsButton" mnemonicParsing="false" onAction="#SwitchToPosts" prefHeight="50.0" prefWidth="230.0" style=" -fx-background-color: transparent;     -fx-text-fill: white;     -fx-font-size: 18px;     -fx-font-family: 'Segoe UI';     -fx-font-weight: bold;     -fx-alignment: CENTER_LEFT;     -fx-background-radius: 15px;     -fx-padding: 0 0 0 20px;     -fx-border-color: transparent;     -fx-border-width: 2px;     -fx-cursor: hand;" text="Postes">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#SwitchToReclamations" prefHeight="50.0" prefWidth="230.0" style=" -fx-background-color: transparent;     -fx-text-fill: white;     -fx-font-size: 18px;     -fx-font-family: 'Segoe UI';     -fx-font-weight: bold;     -fx-alignment: CENTER_LEFT;     -fx-background-radius: 15px;     -fx-padding: 0 0 0 20px;     -fx-border-color: transparent;     -fx-border-width: 2px;     -fx-cursor: hand;" text="Réclamations">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#déconnexion" prefHeight="50.0" prefWidth="230.0" style="-fx-background-color: #F1895C;     -fx-text-fill: white;     -fx-font-size: 18px;     -fx-font-family: 'Segoe UI';     -fx-font-weight: bold;     -fx-background-radius: 25px;     -fx-border-radius: 25px;     -fx-alignment: CENTER;     -fx-cursor: hand;     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 8, 0, 0, 4);" text="Déconnexion">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
