               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="Hotels" mnemonicParsing="false" onAction="#SwitchToHotels" prefHeight="50.0" prefWidth="230.0" style=" -fx-background-color: transparent;     -fx-text-fill: white;     -fx-font-size: 18px;     -fx-font-family: 'Segoe UI';     -fx-font-weight: bold;     -fx-alignment: CENTER_LEFT;     -fx-background-radius: 15px;     -fx-padding: 0 0 0 20px;     -fx-border-color: transparent;     -fx-border-width: 2px;     -fx-cursor: hand;" text="Hotels">
