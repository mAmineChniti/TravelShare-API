<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: #f4f8fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AddExcursionController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER" prefHeight="74.0" prefWidth="850.0" style="-fx-background-color: #3498db; -fx-padding: 10px; -fx-background-radius: 0 0 30 30;">
         <children>
            <Label alignment="CENTER" style="-fx-font-size: 32px; -fx-font-family: 'Segoe UI'; -fx-font-weight: bold;" text="Add Excursion" textFill="white" />
         </children>
      </HBox>

      <!-- Title and Description Fields -->
      <TextField fx:id="titleTF" layoutX="40.0" layoutY="120.0" prefWidth="350.0" promptText="Title" style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
      <TextArea fx:id="descriptionTA" layoutX="460.0" layoutY="120.0" prefHeight="156.0" prefWidth="350.0" promptText="Description" style="-fx-background-color: white;                        -fx-background-radius: 20px;                        -fx-padding: 10px;                        -fx-border-color: #3498db;                        -fx-border-radius: 20px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" wrapText="true" />

      <!-- Date and Duration Fields -->
      <DatePicker fx:id="datePicker" layoutX="40.0" layoutY="210.0" prefWidth="350.0" style="-fx-background-color: white;                          -fx-background-radius: 20px;                          -fx-padding: 10px;                          -fx-border-color: #3498db;                          -fx-border-radius: 20px;                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
      <TextField fx:id="durationTF" layoutX="455.0" layoutY="304.0" prefWidth="350.0" promptText="Duration" style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />

      <!-- Guide Field -->
      <ChoiceBox fx:id="choiceBoxGuide" layoutX="40.0" layoutY="300.0" prefWidth="350.0" style="-fx-background-color: white;                        -fx-background-radius: 20px;                        -fx-padding: 10px;                        -fx-border-color: #3498db;                        -fx-border-radius: 20px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />

      <!-- Add Button -->
      <Button layoutX="380.0" layoutY="420.0" mnemonicParsing="false" onAction="#addExcursion" style="-fx-background-color: linear-gradient(to right, #2980b9, #3498db);                      -fx-text-fill: white;                      -fx-font-size: 18px;                      -fx-font-weight: bold;                      -fx-background-radius: 25px;                      -fx-padding: 10px 20px;                      -fx-cursor: hand;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 4);" text="Add" />

      <!-- Back Button -->
      <Button layoutX="40.0" layoutY="420.0" mnemonicParsing="false" onAction="#goBack1" style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b);                      -fx-text-fill: white;                      -fx-font-size: 18px;                      -fx-font-weight: bold;                      -fx-background-radius: 25px;                      -fx-padding: 10px 20px;                      -fx-cursor: hand;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 4);" text="Back" />
   </children>
</AnchorPane>
