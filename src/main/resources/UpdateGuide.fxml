<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: #f4f8fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UpdateGuideController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER" prefHeight="74.0" prefWidth="850.0" style="-fx-background-color: #3498db; -fx-padding: 10px; -fx-background-radius: 0 0 30 30;">
         <children>
            <Label alignment="CENTER" style="-fx-font-size: 32px; -fx-font-family: 'Segoe UI'; -fx-font-weight: bold;" text="Update Guide" textFill="white" />
         </children>
      </HBox>

      <!-- Name and Last Name Fields -->
      <TextField fx:id="nameTF" layoutX="40.0" layoutY="120.0" prefWidth="350.0" style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
      <TextField fx:id="lastnameTF" layoutX="460.0" layoutY="120.0" prefWidth="350.0"  style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />

      <!-- Email and Phone Fields -->
      <TextField fx:id="emailTF" layoutX="40.0" layoutY="210.0" prefWidth="350.0"  style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
      <TextField fx:id="phoneTF" layoutX="460.0" layoutY="210.0" prefWidth="350.0"  style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />

      <!-- Language and Experience Fields -->
      <TextField fx:id="languageTF" layoutX="40.0" layoutY="300.0" prefWidth="350.0"  style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
      <TextField fx:id="experienceTF" layoutX="460.0" layoutY="300.0" prefWidth="350.0"  style="-fx-background-color: white;                         -fx-background-radius: 20px;                         -fx-padding: 10px;                         -fx-border-color: #3498db;                         -fx-border-radius: 20px;                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" />

      <!-- Update Button -->
      <Button layoutX="380.0" layoutY="420.0" mnemonicParsing="false" onAction="#updateGuide" style="-fx-background-color: linear-gradient(to right, #2980b9, #3498db);                      -fx-text-fill: white;                      -fx-font-size: 18px;                      -fx-font-weight: bold;                      -fx-background-radius: 25px;                      -fx-padding: 10px 20px;                      -fx-cursor: hand;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 4);" text="Update" />

      <!-- Back Button -->
      <Button layoutX="40.0" layoutY="420.0" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b);                      -fx-text-fill: white;                      -fx-font-size: 18px;                      -fx-font-weight: bold;                      -fx-background-radius: 25px;                      -fx-padding: 10px 20px;                      -fx-cursor: hand;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 4);" text="Back" />
      <Label layoutX="53.0" layoutY="94.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Name" />
      <Label layoutX="470.0" layoutY="94.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Last Name" />
      <Label layoutX="470.0" layoutY="183.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Phone Number" />
      <Label layoutX="49.0" layoutY="183.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Email" />
      <Label layoutX="470.0" layoutY="275.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Experience" />
      <Label layoutX="48.0" layoutY="275.0" style="-fx-font-size: 14px;               -fx-font-weight: bold;               -fx-text-fill: #2c3e50;" text="Language" />
   </children>
</AnchorPane>
