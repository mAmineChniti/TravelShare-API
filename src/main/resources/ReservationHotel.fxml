<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" styleClass="root" stylesheets="@css/Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.HotelController">
    <children>
        <VBox layoutX="-4.0" prefHeight="570.0" prefWidth="234.0" styleClass="vbox" stylesheets="@css/Style.css">
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Accueil"/>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Packages">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Hotels">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Excursions">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Réservations">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation"
                    stylesheets="@css/Style.css" text="Profile">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonDeconnexion"
                    stylesheets="@css/Style.css" text="Déconnexion">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
        </VBox>

        <!-- Conteneur pour afficher les réservations dynamiquement -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="580.0" prefHeight="500.0" fx:id="reservationContainer" style="-fx-padding: 10px; -fx-spacing: 10px;" />
    </children>
</AnchorPane>