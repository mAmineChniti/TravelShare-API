<AnchorPane prefHeight="550.0" prefWidth="850.0" styleClass="root" stylesheets="@css/Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ListReponseController">
    <children>
        <VBox layoutX="-4.0" prefHeight="570.0" prefWidth="234.0" styleClass="vbox" stylesheets="@css/Style.css">
            <children>
                <ImageView fitHeight="88.0" fitWidth="124.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="20.0" left="30.0" />
                    </VBox.margin>
                    <image>
                        <Image url="@images/agence.png" />
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" onAction="#switchToAccueil" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation" stylesheets="@css/Style.css" text="Accueil" />
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation" stylesheets="@css/Style.css" text="Packages">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation" stylesheets="@css/Style.css" text="Hotels">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation" stylesheets="@css/Style.css" text="Excursions">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonNavigation" stylesheets="@css/Style.css" text="Postes">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0" styleClass="buttonEnCours" stylesheets="@css/Style.css" text="Réclamations">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#deconnexion" prefHeight="50.0" prefWidth="230.0" styleClass="buttonDeconnexion" stylesheets="@css/Style.css" text="Déconnexion">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
      <Label layoutX="281.0" layoutY="24.0" text="Réponses :" textFill="#0598ff" AnchorPane.bottomAnchor="530.0" AnchorPane.leftAnchor="270.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ListView fx:id="reponseListView" layoutX="281.0" layoutY="60.0" prefHeight="231.0" prefWidth="558.0" AnchorPane.bottomAnchor="290.0" AnchorPane.leftAnchor="270.0" />
      <TextArea fx:id="reponseField" layoutX="270.0" layoutY="312.0" prefHeight="82.0" prefWidth="558.0" promptText="Saisissez votre réponse..." styleClass="reclamation" stylesheets="@css/Style.css" AnchorPane.leftAnchor="270.0" />
      <Button fx:id="saveButton" layoutX="440.0" layoutY="428.0" mnemonicParsing="false" onAction="#updateReponse" prefHeight="31.0" prefWidth="218.0" stylesheets="@css/Style.css" text="Enregistrer les modifications" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="delButton" layoutX="440.0" layoutY="478.0" mnemonicParsing="false" onAction="#deletereponse" prefHeight="31.0" prefWidth="218.0" styleClass="buttonSupprime" stylesheets="@css/Style.css" text="Supprimer la reponse" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <ImageView fx:id="retourpage" fitHeight="24.0" fitWidth="20.0" layoutX="252.0" layoutY="26.0" onMouseClicked="#retourpage" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="534.4" AnchorPane.leftAnchor="242.0">
         <image>
            <Image url="@images/bouton-retour.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
