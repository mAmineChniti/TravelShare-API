<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AddHotelController" spacing="10" alignment="CENTER" style="-fx-background-color: #f5f6fa; -fx-padding: 20;">
    <Label text="Ajouter un hôtel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <VBox spacing="5">
        <Label text="Nom de l'hôtel" />
        <TextField fx:id="nomField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Adresse" />
        <TextField fx:id="adresseField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Téléphone" />
        <TextField fx:id="telephoneField" />
    </VBox>
    <VBox spacing="5">
        <Label text="Capacité totale" />
        <TextField fx:id="capaciteField" />
    </VBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        <Button text="Ajouter" onAction="#handleAdd" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
    </HBox>
</VBox>